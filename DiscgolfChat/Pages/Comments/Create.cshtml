@page "{postId:int}"
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        Kommentarformuläret innehåller fel.
    </div>
}
@model DiscgolfChat.Pages.Comments.CreateModel
@{
    ViewData["Title"] = "Skriv en kommentar";
}

<h2>Skriv en kommentar</h2>

<form method="post">
    <div class="form-group">
        <textarea asp-for="Comment.Content" class="form-control" rows="4" placeholder="Skriv din kommentar här..."></textarea>
        <span asp-validation-for="Comment.Content" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Publicera kommentar</button>
</form>

<a asp-page="/Topics/Details" asp-route-id="@Model.Comment.PostId" class="btn btn-link mt-3">Tillbaka till ämnet</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}