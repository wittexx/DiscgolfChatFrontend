@page
@model DiscgolfChat.Pages.Topics.CreateModel
@{
    ViewData["Title"] = "Skapa nytt ämne";
}

<h2>Skapa nytt ämne</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Topic.Title" class="form-label">Titel</label>
        <input asp-for="Topic.Title" class="form-control" />
        <span asp-validation-for="Topic.Title" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Publicera</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
